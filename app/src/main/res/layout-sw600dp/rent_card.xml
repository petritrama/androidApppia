<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/rent_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:background="@drawable/navdraw_listitem_ripple"
        android:orientation="horizontal"
        android:textAlignment="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMob1"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:textSize="12sp"
                android:gravity="left|center"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/txtMob2"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:textSize="12sp"
                android:gravity="left|center"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/txtMob3"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:textSize="12sp"
                android:gravity="left|center"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/txtMob4"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:textSize="12sp"
                android:gravity="left|center"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:textSize="12sp"
                android:gravity="left|center"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/txtWeb"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:textSize="12sp"
                android:gravity="left|center"
                android:paddingRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:gravity="center|right"
                android:text="Tel:"
                android:textAlignment="gravity"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:id="@+id/lblTel1"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:gravity="center|right"
                android:text="Tel:"
                android:textAlignment="gravity"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:id="@+id/lblTel2"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:gravity="center|right"
                android:text="Tel:"
                android:textAlignment="gravity"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:id="@+id/lblTel3"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:gravity="center|right"
                android:text="Tel:"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:id="@+id/lblTel4"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:gravity="center|right"
                android:text="Email:"
                android:textStyle="bold"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:gravity="center|right"
                android:text="Web:"
                android:textStyle="bold"
                android:paddingRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivRentLogo"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/lblSchedule"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:gravity="bottom|center"
                android:text="@string/rent_schedule"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txtSchedule"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:gravity="center|top"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
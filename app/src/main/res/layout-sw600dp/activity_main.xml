<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ivBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:padding="0dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/tvTitle"
        android:text="@string/lblTitle"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:layout_below="@+id/ivLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

    <RelativeLayout
        android:id="@+id/rlBody"
        android:layout_width="275dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/btnFlightInfo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/flightinfo_ripple"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flightinfo_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtFlightInfo"
            android:layout_below="@+id/btnFlightInfo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignRight="@+id/btnFlightInfo"
            android:layout_alignEnd="@+id/btnFlightInfo"
            android:text="@string/text_btnFlight"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnExplore"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/explore_ripple"
            android:scaleType="centerCrop"
            android:src="@drawable/explore_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/text_btnExplore"
            android:id="@+id/txtExplore"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_below="@+id/btnExplore"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/btnExplore"
            android:layout_alignStart="@+id/btnExplore" />

        <ImageButton
            android:id="@+id/btnDestination"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/destinations_ripple"
            android:scaleType="centerCrop"
            android:src="@drawable/destination_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/text_btnDestinations"
            android:id="@+id/txtDestination"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_below="@+id/btnDestination"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/btnDestination"
            android:layout_alignEnd="@+id/btnDestination"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnServices"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/services_ripple"
            android:scaleType="centerCrop"
            android:src="@drawable/service_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/text_btnServices"
            android:id="@+id/txtServices"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_below="@+id/btnServices"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/btnServices"
            android:layout_alignStart="@+id/btnServices"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnNews"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/news_ripple"
            android:scaleType="centerCrop"
            android:src="@drawable/news_icon"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/btnInfo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/info_ripple"
            android:scaleType="centerCrop"
            android:src="@drawable/info_icon"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/text_btnNews"
        android:id="@+id/txtNews"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@+id/rlBody"
        android:layout_alignLeft="@+id/rlBody"
        android:layout_alignStart="@+id/rlBody"
        android:textSize="16sp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/text_btnInfo"
        android:id="@+id/txtInfo"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@+id/rlBody"
        android:layout_alignRight="@+id/rlBody"
        android:layout_alignEnd="@+id/rlBody"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/llFooter"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <Spinner
            android:id="@+id/spinnerLang"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:prompt="@string/lang_default"
            android:spinnerMode="dropdown"
            android:textColor="@color/white" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnFB"
            android:src="@drawable/fb"
            android:scaleType="centerCrop"
            android:background="@drawable/fb_ripple"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="9dp"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnTwitter"
            android:src="@drawable/twitter"
            android:scaleType="centerCrop"
            android:background="@drawable/twitter_ripple"
            android:padding="9dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btnFB"
            android:layout_toEndOf="@+id/btnFB"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnInsta"
            android:src="@drawable/insta"
            android:scaleType="centerCrop"
            android:background="@drawable/insta_ripple"
            android:padding="9dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btnFB"
            android:layout_toStartOf="@+id/btnFB"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnMap"
            android:scaleType="centerCrop"
            android:src="@drawable/map"
            android:background="@drawable/map_ripple"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="9dp"/>

    </RelativeLayout>

</RelativeLayout>

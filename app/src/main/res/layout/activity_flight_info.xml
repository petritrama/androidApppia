<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_flightInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="aero.project.petritrama.prishtinainternationalairportademjashari.InformationActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabs"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="5dp"
        android:theme="@style/AppTheme.TabLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/AppTheme.TabLayout"
        app:tabBackground="@drawable/tab_tablayout"
        app:tabTextColor="@color/gray">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="aero.project.petritrama.prishtinainternationalairportademjashari.FlightInfoActivity"
        android:layout_below="@+id/tabs"
        android:layout_marginTop="2dp">

    </android.support.v4.view.ViewPager>

</RelativeLayout>